[init]
	defaultBranch = main
[user]
	name = Jonas Ehrlich
	email = jonas.ehrlich@gmail.com
[alias]
	co = checkout
	last = log -1 HEAD
	sync = pull --rebase
	tree = "log --all --graph --decorate --abbrev-commit --pretty=format:'%C(auto)%h %d %s %C(normal dim)â€¢ %cn, %cr'"
	undo-amend = reset --soft HEAD@{1}
	unstage = reset HEAD --
[help]
	autoCorrect = "immediate"
[core]
	pager = less -X -F 	# Configure less to exit immediately if paging output is less than one screen
[rebase]
	autostash = true
